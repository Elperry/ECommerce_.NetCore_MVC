@model IEnumerable<Ecommerce.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_LayoutDashborad.cshtml";
}



<p class="m-4">
    <a asp-action="Create"  class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover table-striped table-active table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescrition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductUnitInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductUnitPrice)
            </th>
            <th>
                Has Offer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescrition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUnitInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUnitPrice)
            </td>
            <td>
               @(item.Offer==null?"NO":"YES")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" onclick="return confirm('are you Sure??')" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
