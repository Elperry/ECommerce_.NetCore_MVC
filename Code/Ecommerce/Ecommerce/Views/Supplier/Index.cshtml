@model IEnumerable<Supplier>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<div class="intro-y flex flex-col sm:flex-row items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        All Suppliers
    </h2>
    <div class="w-full sm:w-auto flex mt-4 sm:mt-0">
        <a asp-action="Create" class="button text-white bg-theme-1 shadow-md mr-2" onclick="ajaxRender(event)">Add new Supplier</a>
    </div>
</div>
<div class="intro-y datatable-wrapper box p-5 mt-5">
    <table class="table table-report table-report--bordered display datatable w-full">
        <thead>
            <tr>
                <th class="border-b-2 whitespace-no-wrap"></th>
                <th class="whitespace-no-wrap uppercase">@Html.DisplayNameFor(ww => ww.SupplierName)</th>
                <th class="border-b-2 text-center whitespace-no-wrap uppercase">@Html.DisplayNameFor(ww => ww.SupplierAddress)</th>
                <th class="border-b-2 text-center whitespace-no-wrap">STATUS</th>
                <th class="border-b-2 text-center whitespace-no-wrap">ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center border-b">
                        <div class="flex sm:justify-center">
                            <div class="intro-x w-10 h-10 image-fit">
                                <img alt="Midone Tailwind HTML Admin Template" class="rounded-full" src="https://images.unsplash.com/photo-1567446537708-ac4aa75c9c28?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60">
                            </div>
                        </div>
                    </td>
                    <td class="text-center border-b">@Html.DisplayFor(ww => item.SupplierName)</td>
                    @*<div class="font-medium whitespace-no-wrap"> <a asp-action="Details" asp-route-id="@item.SupplierId">@Html.DisplayFor(ww => item.SupplierName)</a></div>*@
                    <td class="text-center border-b">@Html.DisplayFor(ww => item.SupplierAddress)</td>
                    <td class="w-40 border-b">
                        <div class="flex items-center sm:justify-center text-theme-9"> <i data-feather="check-square" class="w-4 h-4 mr-2"></i> Active </div>
                    </td>
                    <td class="border-b w-5">
                        <div class="flex sm:justify-center items-center">
                            <a asp-action="Edit" asp-route-id="@item.SupplierId" onclick="ajaxRender(event)" class="flex items-center mr-3"> <i data-feather="check-square" class="w-4 h-4 mr-1"></i> Edit </a>
                            <a asp-action="Delete" asp-route-id="@item.SupplierId" class="flex items-center text-theme-6" onclick="return (confirm('Are you Sure Deleting this Supplier ?')?ajaxRender(event):false)"> <i data-feather="trash-2" class="w-4 h-4 mr-1"></i> Delete </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
