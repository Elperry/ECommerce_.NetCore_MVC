@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = null;
}


<hr />
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <div class="intro-y box p-5">
            <form id="CreateProduct" class="validate-form" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label class="flex flex-col sm:flex-row" asp-for="ProductName">@Html.DisplayNameFor(e => e.ProductName) <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, at least 2 characters</span> </label>
                    <input type="text" asp-for="ProductName" class="input w-full border mt-2" minlength="2" required>
                    <span asp-validation-for="ProductName" class="text-theme-6"></span>
                </div>
                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="ProductDescrition">
                        @Html.DisplayNameFor(e => e.ProductDescrition)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, at least 10 characters</span>
                    </label>
                    <textarea class="input w-full border mt-2" asp-for="ProductDescrition" minlength="10" required>  </textarea>
                    <span asp-validation-for="ProductDescrition" class="text-theme-6"></span>
                </div>

                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="ProductUnitInStock">
                        @Html.DisplayNameFor(e => e.ProductUnitInStock)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, numbers only</span>
                    </label>
                    <input type="number" asp-for="ProductUnitInStock" class="input w-full border mt-2" required>
                    <span asp-validation-for="ProductUnitInStock" class="text-theme-6"></span>
                </div>
                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="ProductUnitPrice">
                        @Html.DisplayNameFor(e => e.ProductUnitPrice)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, numbers only</span>
                    </label>
                    <input type="number" asp-for="ProductUnitPrice" class="input w-full border mt-2" required>
                    <span asp-validation-for="ProductUnitPrice" class="text-theme-6"></span>
                </div>
                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="CategoryId">
                        @Html.DisplayNameFor(e => e.Category.CategoryName)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, numbers only</span>
                    </label>
                    <select asp-for="CategoryId" class="input input--sm border mr-2" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-theme-6"></span>
                </div>
                <div class="text-right mt-5">
                    <a asp-action="Index" class="button w-24 border text-gray-700 mr-1" onclick="ajaxRender(event)">Back to List</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Create</button>

                </div>
            </form>

        </div>

</div>
</div>