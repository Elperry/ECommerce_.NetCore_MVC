@model Ecommerce.Models.Offer

@{
    ViewData["Title"] = "Create Offer";
    Layout = "~/Views/Shared/_LayoutDashborad.cshtml";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div class="form-group">
                <label asp-for="OfferName" class="control-label"></label>
                <input asp-for="OfferName" class="form-control" />
                <span asp-validation-for="OfferName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sale" class="control-label"></label>
                <input asp-for="Sale" class="form-control" />
                <span asp-validation-for="Sale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFrom" class="control-label"></label>
                <input asp-for="DateFrom" class="form-control" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label"></label>
                <input asp-for="DateTo" class="form-control" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<hr />
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <div class="intro-y box p-5">
            <form id="CreateOffer" class="validate-form" asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label class="flex flex-col sm:flex-row" asp-for="OfferName">@Html.DisplayNameFor(e => e.OfferName) <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, at least 2 characters</span> </label>
                    <input type="text" asp-for="OfferName" class="input w-full border mt-2" minlength="2" required>
                    <span asp-validation-for="OfferName" class="text-theme-6"></span>
                </div>

                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="Sale">
                        @Html.DisplayNameFor(e => e.Sale)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, numbers only</span>
                    </label>
                    <input type="number" asp-for="Sale" class="input w-full border mt-2" required>
                    <span asp-validation-for="Sale" class="text-theme-6"></span>
                </div>
                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="DateFrom">
                        @Html.DisplayNameFor(e => e.DateFrom)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, numbers only</span>
                    </label>
                    <input type="number" asp-for="DateFrom" class="input w-full border mt-2" required>
                    <span asp-validation-for="DateFrom" class="text-theme-6"></span>
                </div>
                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="DateTo">
                        @Html.DisplayNameFor(e => e.DateTo)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, numbers only</span>
                    </label>
                    <input type="number" asp-for="DateTo" class="input w-full border mt-2" required>
                    <span asp-validation-for="DateTo" class="text-theme-6"></span>
                </div>


                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="CategoryId">
                        @Html.DisplayNameFor(e => e.Category.CategoryName)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, numbers only</span>
                    </label>
                    <select asp-for="CategoryId" class="input input--sm border mr-2" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-theme-6"></span>
                </div>
                <div class="text-right mt-5">
                    <a asp-action="Index" class="button w-24 border text-gray-700 mr-1" onclick="ajaxRender(event)">Back to List</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Create</button>

                </div>
            </form>

        </div>

    </div>
</div>

